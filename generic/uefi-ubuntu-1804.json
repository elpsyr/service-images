{
    "builders": [{
        "type": "qemu",
        "accelerator": "kvm",
        "qemuargs": [
        ["-m", "2048M"],
        ["-smp", "cpus=1,maxcpus=16,cores=4"],
        ["-cpu", "host"],
        ["-bios", "/usr/share/ovmf/x64/OVMF.fd"],
        ["-vga", "qxl"],
        ["-machine", "accel=kvm"]
        ],
        "disk_interface": "virtio",
        "disk_compression": false,
        "disk_size": 30720,
        "format": "qcow2",
        "net_device": "virtio-net",

        "iso_url": "http://cdimage.ubuntu.com/ubuntu/releases/bionic/release/ubuntu-18.04.5-server-amd64.iso",
        "iso_checksum": "8c5fc24894394035402f66f3824beb7234b757dd2b5531379cb310cedfdf0996",

        "vm_name": "generic-uefi-ubuntu-1804",
        "output_directory": "./_output/generic-uefi-ubuntu-1804",

        "headless": false,
        "vnc_bind_address": "0.0.0.0",

        "http_directory": "./generic/http/",
        "ssh_username": "root",
        "ssh_password": "123@yunion",
        "ssh_timeout": "30m",

        "boot_wait": "5s",
        "boot_command": [
          "c<wait>",
          "linux /install/vmlinuz noapic ",
          "auto-install/enable=true ",
          "debconf/priority=critical ",
          "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed-uefi.cfg",
          "<enter><wait>",
          "initrd /install/initrd.gz",
          "<enter><wait>",
          "boot",
          "<enter><wait>"
        ],

        "shutdown_command": "echo 'packer' | sudo -S systemctl poweroff"
    }],
    "provisioners": [{
        "type": "shell",
        "execute_command": "echo '123@yunion' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
        "scripts": [
            "scripts/ubuntu/remove-netplan.sh",
            "scripts/ubuntu/grub-config.sh",
            "scripts/ubuntu/clean-sshkeys.sh",
            "scripts/ubuntu/cleanup.sh",
            "scripts/common/sync.sh"
        ]
    }]
}


